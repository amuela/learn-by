{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "gcc-debug",
            "displayName": "Linux GCC Debug",
            "description": "Debug build with GCC on Linux",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -g -ggdb -O0",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "clang-debug",
            "displayName": "Linux Clang Debug",
            "description": "Debug build with Clang on Linux",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -g -O0",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "clang-21-debug",
            "displayName": "Linux Clang Debug",
            "description": "Debug build with Clang on Linux",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_CXX_COMPILER": "clang++-21",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -g -O0",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "gcc-debug",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "clang-21-debug",
            "configurePreset": "clang-21-debug"
        },
        {
            "name": "clang-debug",
            "configurePreset": "clang-debug"
        }
    ]
}
